/* === Base styles (mobile-first) === */
body {
  margin: 0;
  font-family: Arial, sans-serif;
  background: #f4f4f4;
  color: #333;
}

header {
  background: #007bff;
  color: white;
  padding: 15px;
  text-align: center;
}

header h1 {
  margin: 0;
}

nav ul {
  list-style: none;
  padding: 0;
  margin: 10px 0 0;
}

nav ul li {
  display: block;
  margin: 8px 0;
}

nav ul li a {
  color: white;
  text-decoration: none;
  font-size: 18px;
}

.content, .quiz, .api-section {
  padding: 20px;
  text-align: center;
}

/* Cards style for quiz & API */
.quiz, .api-section {
  background: white;
  margin: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

#submit-btn, #joke-btn {
  background: #007bff;
  color: white;
  border: none;
  padding: 10px 20px;
  margin-top: 10px;
  cursor: pointer;
  border-radius: 5px;
}

#joke-btn {
  background: #28a745;
}

footer {
  text-align: center;
  padding: 15px;
  background: #007bff;
  color: white;
  margin-top: 20px;
}

/* === Tablet screens (≥600px) === */
@media screen and (min-width: 600px) {
  nav ul {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  nav ul li {
    margin: 0;
  }

  .content {
    font-size: 18px;
  }

  .quiz, .api-section {
    max-width: 500px;
    margin: 20px auto;
  }
}

/* === Desktop screens (≥1024px) === */
@media screen and (min-width: 1024px) {
  header {
    text-align: left;
    padding: 20px 50px;
  }

  nav ul {
    justify-content: flex-end;
    margin-top: -40px;
  }

  .content {
    max-width: 800px;
    margin: auto;
    text-align: left;
    font-size: 20px;
  }
}
